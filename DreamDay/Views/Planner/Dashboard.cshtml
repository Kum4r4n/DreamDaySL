@model List<DreamDay.Models.PlannerWeddingViewModel>
@{
    ViewBag.Title = "Planner Dashboard";
}
<h2>Your Assigned Weddings</h2>
<table class="table">
    <thead>
        <tr>
            <th>Partner One</th>
            <th>Partner Two</th>
            <th>Date</th>
            <th>Budget</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var wedding in Model)
        {
            <tr>
                <td>@wedding.PartnerOneName</td>
                <td>@wedding.PartnerTwoName</td>
                <td>@wedding.WeddingDate.ToShortDateString()</td>
                <td>@wedding.TotalBudget.ToString("C")</td>
                <td class="d-flex flex-column gap-1">
                    <a class="btn btn-sm btn-outline-primary"
                       asp-controller="PlannerChecklist"
                       asp-action="Index"
                       asp-route-weddingId="@wedding.Id">
                        Manage Checklist
                    </a>

                    <a class="btn btn-sm btn-outline-secondary"
                       asp-controller="PlannerNotes"
                       asp-action="Index"
                       asp-route-weddingId="@wedding.Id">
                        Message Couple
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>