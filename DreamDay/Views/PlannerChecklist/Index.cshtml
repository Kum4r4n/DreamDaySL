@model List<ChecklistItemModel>
@{
    ViewBag.Title = "Checklist";
    Guid weddingId = ViewBag.WeddingId;
}
<h2>Checklist</h2>
<a asp-action="Create" asp-route-weddingId="@weddingId" class="btn btn-primary mb-2">Add Task</a>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@(item.IsCompleted ? "Completed" : "Pending")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Delete this task?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>