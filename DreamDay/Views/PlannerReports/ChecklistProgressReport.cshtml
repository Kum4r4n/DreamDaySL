@model List<ChecklistProgressReport>
@{
    ViewBag.Title = "Checklist Completion Overview";
}
<h2>Checklist Completion Overview</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Wedding</th>
            <th>Total Tasks</th>
            <th>Completed</th>
            <th>Progress</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CoupleName</td>
                <td>@item.Total</td>
                <td>@item.Completed</td>
                <td>
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" style="width: @item.PercentComplete%" aria-valuenow="@item.PercentComplete" aria-valuemin="0" aria-valuemax="100">
                            @item.PercentComplete%
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>